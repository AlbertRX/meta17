<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data >

        <!-- form view -->
        <record id="view_product_base_info_form" model="ir.ui.view">
            <field name="name">产品基本信息表单视图</field>
            <field name="model">pim.product_base_info</field>
            <field name="arch" type="xml">
                <form string="产品基本信息">
                    <group>
                        <field name="name"/>
                        <field name="product_catalog_id"/>
                        <field name="sku"/>
                        <field name="barcode"/>
                    </group>
                    <notebook>
                        <page name="variants" string="变体">
                            <field name="product_attribute_line_ids" widget="one2many">
                                <tree string="变体" editable="bottom">
                                    <field name="attribute_id" widget="many2one" options="{'no_create': True}" />
                                    <field name="attribute_value_ids" widget="many2many_tags" options="{'no_create': True}" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

    </data>

</odoo>
